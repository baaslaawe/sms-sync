<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAddressActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:clickable="true"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sever_address_label"
                android:textAppearance="?android:textAppearanceMedium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Type server address here..."
                android:id="@+id/updatedServerAddress"
                android:inputType="textUri"
                android:background="@drawable/input_bg"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Phone Number"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Type your phone number here..."
                android:id="@+id/devicePhoneNumber"
                android:inputType="phone"
                android:background="@drawable/input_bg"
                android:paddingLeft="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:id="@+id/btnDetails"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>